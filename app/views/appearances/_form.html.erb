<% if flash[:errors]%>
    <% flash[:errors].each do |e| %>
        <li style="color: purple">
            <%= e %>
        </li>
<%end%>
<%end%>
<%= form_for @appearance do |f|%>
<%= f.label 'Choose A Guest'%>
<%= f.collection_select :guest_id, @guests, :id, :name%>
<%= f.label 'Choose An Episode'%>
<%= f.collection_select :episode_id, @episodes, :id, :name%>
<%= f.label :rating%>
<%= f.numeric_field :rating%>
<%= f.submit%>
<%end%>