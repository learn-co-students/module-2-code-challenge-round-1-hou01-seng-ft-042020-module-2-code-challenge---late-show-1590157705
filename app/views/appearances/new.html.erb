<% if flash[:errors]%>
    <%flash[:errors].each do |e|%>
    <%=e%>
    <%end%>
<%end%>

<h1> New Appearance Form:</h1>
<p>
<%=form_with model: @appearance do |f|%>
<%=f.label :guest %>
<%=f.collection_select(:guest_id, @guests, :id, :name) %>

<%=f.label :episode%>
<%=f.collection_select(:episode_id, @episodes, :id, :date) %>

<%=f.label :rating%>
<%=f.number_field :rating%>

<%=f.submit%>
<%end%>

